---
import Layout from '../layouts/Layout.astro';
import InteractiveHero from '../components/InteractiveHero';
import AnimatedFeatures from '../components/AnimatedFeatures';
import CustomCursor from '../components/CustomCursor';
---

<Layout title="CoreShot - Precision Shooting Management" description="Professional shooting range management and sports shooting solutions across Europe">
  <CustomCursor client:load />
  <main class="min-h-screen bg-[#1C2526]">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <InteractiveHero client:load />
      <AnimatedFeatures client:load />

      <section id="contact" class="py-24 relative overflow-hidden">
        <div class="absolute inset-0 pointer-events-none">
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-[#E11D48]/5 rounded-full blur-3xl animate-pulse-slow" />
        </div>
        <div class="max-w-2xl mx-auto text-center relative z-10">
          <h2 class="text-4xl sm:text-5xl font-bold text-white mb-6 animate-fade-in-up">
            Ready to Get Started?
          </h2>
          <p class="text-lg text-[#6B7280] mb-12 animate-fade-in-up" style="animation-delay: 0.1s;">
            Join shooting ranges and clubs across Europe using CoreShot for precision management.
          </p>
          <a
            href="mailto:info@coreshot.eu"
            class="group inline-block px-12 py-5 bg-[#E11D48] text-white rounded-sm font-semibold hover:bg-[#BE123C] transition-all duration-300 shadow-lg hover:shadow-2xl hover:shadow-[#E11D48]/50 transform hover:-translate-y-1 text-lg relative overflow-hidden animate-fade-in-up"
            style="animation-delay: 0.2s;"
          >
            <span class="relative z-10">Contact Us</span>
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent translate-x-[-200%] group-hover:translate-x-[200%] transition-transform duration-700" />
          </a>
        </div>
      </section>
    </div>

    <footer class="border-t border-white/10 py-8">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <p class="text-center text-[#6B7280] text-sm">
          &copy; 2025 CoreShot. Professional shooting range solutions across Europe.
        </p>
      </div>
    </footer>
  </main>
</Layout>
