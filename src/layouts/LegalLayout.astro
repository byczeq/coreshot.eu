---
import '../styles/global.css';
import StickyHeader from '../components/StickyHeader';
import Footer from '../components/Footer';

interface Props {
  title: string;
  description?: string;
  locale?: string;
}

const { title, description = 'CoreShot Legal Documents', locale = 'en' } = Astro.props;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="bg-[#1C2526]">
    <StickyHeader client:load locale={locale} />
    <main class="min-h-screen relative overflow-hidden">
      <div class="absolute inset-0 overflow-hidden">
        <div
          class="absolute inset-0 bg-cover bg-center bg-no-repeat"
          style="background-image: url(/image.png)"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-[#1C2526]/60 via-[#1C2526]/70 to-[#1C2526]" />
        <div class="absolute inset-0 bg-gradient-to-r from-[#1C2526] via-transparent to-[#1C2526]" />
        <div class="absolute inset-0 bg-gradient-to-t from-[#1C2526] via-[#1C2526]/80 to-transparent" />
      </div>

      <div class="absolute inset-0 pointer-events-none">
        <div
          class="absolute top-1/4 left-1/4 w-96 h-96 bg-[#E11D48]/10 rounded-full blur-3xl"
        />
        <div
          class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-[#E11D48]/5 rounded-full blur-3xl"
        />
      </div>

      <div class="relative z-10 pt-24 pb-16">
        <div class="max-w-4xl mx-auto px-4">
          <article class="prose prose-invert prose-red max-w-none markdown-content">
            <slot />
          </article>
        </div>
      </div>
    </main>
    <Footer client:load locale={locale} />
  </body>
</html>

<style is:global>
  .markdown-content h1 {
    font-size: 2.25rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
  }

  .markdown-content h2 {
    font-size: 1.875rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  .markdown-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: white;
    margin-bottom: 0.75rem;
    margin-top: 1.5rem;
  }

  .markdown-content p {
    color: #e5e7eb;
    margin-bottom: 1rem;
  }

  .markdown-content strong {
    color: white;
    font-weight: 600;
  }

  .markdown-content ul,
  .markdown-content ol {
    list-style-position: inside;
    color: #e5e7eb;
    margin-top: 0.5rem;
    margin-bottom: 1rem;
  }

  .markdown-content ul {
    list-style-type: disc;
  }

  .markdown-content ol {
    list-style-type: decimal;
  }

  .markdown-content li {
    margin-top: 0.25rem;
  }

  .markdown-content a {
    color: #e11d48;
    text-decoration: none;
  }

  .markdown-content a:hover {
    text-decoration: underline;
  }

  .markdown-content table {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #e5e7eb;
    margin: 1rem 0;
  }

  .markdown-content thead {
    background-color: rgba(255, 255, 255, 0.05);
  }

  .markdown-content th,
  .markdown-content td {
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.75rem 1rem;
    text-align: left;
  }

  .markdown-content hr {
    border-color: rgba(255, 255, 255, 0.1);
    margin: 2rem 0;
  }

  .markdown-content tbody tr:nth-child(even) {
    background-color: rgba(255, 255, 255, 0.05);
  }
</style>
